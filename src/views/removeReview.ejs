<%- include('_includes/header.ejs', { user: it.sessionUser }) %>

<main>
    <h1>remove review <em><%= it.reviewname %></em>?</h1>

    <form action="/<%= it.sessionUser.username %>/review/remove/<%= it.reviewid %>" method="post">
        <p>are you sure you want to delete this review?</p>
        <button type="submit">confirm</button>

        <p>
            <a href="/<%= it.sessionUser.username %>/reviews">go back</a>
        </p>
    </form>

    <% if (it.error) { %>
        <p>error: <%= it.error %></p>
    <% } %>
</main>

<%- include('_includes/footer.ejs') %>