<%- include('_includes/header.ejs', { user: it.sessionUser }) %>

<main>
    <h1><%= it.user.username %></h1>

    <% if (it.isAuth) { %>
        <a href="/<%= it.user.username %>/list/create">create new list</a>
    <% } %>

    <a href="/<%= it.user.username %>/reviews/">reviews</a>

    <h2>lists</h2>

    <% if (it.lists && it.lists.length > 0) { %>
        <% for (let list of it.lists) { %>
            <div>
                <h3>
                    <a href="/<%= it.user.username %>/<%= list.slug %>">
                        <%= list.listname %>
                    </a>
                </h3>
            </div>
        <% } %>
    <% } else { %>
        <em>this user has not made any lists yet</em>
    <% } %>
</main>

<%- include('_includes/footer.ejs') %>